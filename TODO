    return <div key={index} className={styles.film}>
        <Link className={styles.linkFilm} href={`/films/${f.id}`}>
            <Image className={styles.filmImage} src={f.poster.url} alt={f.name} width={153} height={235}/>
            <p className={styles.filmTitle}>{f.name}</p>
        </Link>
    </div>
